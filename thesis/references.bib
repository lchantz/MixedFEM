@article{AYMARD2019100010,
title = {A linear, second-order, energy stable, fully adaptive finite element method for phase-field modelling of wetting phenomena},
journal = {Journal of Computational Physics: X},
volume = {2},
pages = {100010},
year = {2019},
issn = {2590-0552},
doi = {https://doi.org/10.1016/j.jcpx.2019.100010},
url = {https://www.sciencedirect.com/science/article/pii/S2590055219300265},
author = {Benjamin Aymard and Urbain Vaes and Marc Pradas and Serafim Kalliadasis},
keywords = {Wetting, Diffuse interface theory, Finite element method, Cahn-Hilliard equation, Adaptive time step},
abstract = {We propose a new numerical method to solve the Cahn-Hilliard equation coupled with non-linear wetting boundary conditions. We show that the method is mass-conservative and that the discrete solution satisfies a discrete energy law similar to the one satisfied by the exact solution. We perform several tests inspired by realistic situations to verify the accuracy and performance of the method: wetting of a chemically heterogeneous substrate in three dimensions, wetting-driven nucleation in a complex two-dimensional domain and three-dimensional diffusion through a porous medium.}
}

@article{LI20171855,
title = {Computationally efficient adaptive time step method for the Cahn–Hilliard equation},
journal = {Computers \& Mathematics with Applications},
volume = {73},
number = {8},
pages = {1855-1864},
year = {2017},
issn = {0898-1221},
doi = {https://doi.org/10.1016/j.camwa.2017.02.021},
url = {https://www.sciencedirect.com/science/article/pii/S0898122117301001},
author = {Yibao Li and Yongho Choi and Junseok Kim},
keywords = {Cahn–Hilliard equation, Adaptive time-stepping method, Unconditionally stable scheme},
abstract = {In this work, we propose a fast and efficient adaptive time step procedure for the Cahn–Hilliard equation. The temporal evolution of the Cahn–Hilliard equation has multiple time scales. For spinodal decomposition simulation, an initial random perturbation evolves on a fast time scale, and later coarsening evolves on a very slow time scale. Therefore, if a small time step is used to capture the fast dynamics, the computation is quite costly. On the other hand, if a large time step is used, fast time evolutions may be missed. Hence, it is essential to use an adaptive time step method to simulate phenomena with multiple time scales. The proposed time adaptivity algorithm is based on the discrete maximum norm of the difference between two consecutive time step numerical solutions. Numerical experiments in one, two, and three dimensions are presented to demonstrate the performance and effectiveness of the adaptive time-stepping algorithm.}
}
