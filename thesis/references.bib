pages = {919-950},
year = {2019},
issn = {0045-7825},
doi = {https://doi.org/10.1016/j.cma.2018.11.019},
url = {https://www.sciencedirect.com/science/article/pii/S0045782518305760},
author = {Vahid Mohammadi and Mehdi Dehghan},
keywords = {Mathematical biology, Cahn–Hilliard and tumor growth equations, Element-free Galerkin method, A semi-implicit backward differential formula, Adaptive time strategy, Biconjugate gradient stabilized algorithm},
abstract = {The main aim of this research work is to find the numerical solution based on a meshless technique for both the time-dependent Cahn–Hilliard and tumor growth partial differential equations. The temporal variable is discretized using a second-order method based on semi-implicit backward differential formula, and the stabilized term is added to the considered time discretization. Also, an adaptive time algorithm is used to reduce the number of iterations of the proposed time discretization. Besides, to approximate the spatial variables, the element-free Galerkin method is considered for both mathematical models. The result of full discrete schemes in studied models is solved via Biconjugate gradient stabilized algorithm. Some numerical simulations are reported to show the capability of the numerical scheme presented here.}
}

